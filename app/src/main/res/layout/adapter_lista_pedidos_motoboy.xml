<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp">

        <ImageButton
            android:id="@+id/tvAdapterMotoboyBtMaps"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/branco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdapterMotoboyBtWhats"
            app:srcCompat="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/tvAdapterMotoboyPedidosCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente Que Fez Pedido"
            android:textColor="@color/laranja"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAdapterMotoboyPedidosValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="R$89,00"
            android:textColor="@color/marrom"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdapterMotoboyPedidosCliente" />

        <ImageButton
            android:id="@+id/tvAdapterMotoboyBtWhats"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/branco"
            app:layout_constraintBottom_toTopOf="@+id/tvAdapterMotoboyBtMaps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdapterMotoboyBtLigar"
            app:srcCompat="@drawable/ic_whats" />

        <ImageButton
            android:id="@+id/tvAdapterMotoboyBtLigar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/branco"
            app:layout_constraintBottom_toTopOf="@+id/tvAdapterMotoboyBtWhats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ligacao_esquerda" />

        <TextView
            android:id="@+id/tvAdapterMotoboyPedidosEndereco"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Rua Mathias Nossol - 785 - Serra Alta - Entregar no Sandra Foods"
            android:textColor="@color/laranja"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAdapterMotoboyBtWhats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdapterMotoboyPedidosValor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemListaMotoboyClicavel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAdapterMotoboyBtWhats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>